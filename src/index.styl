@require "~normalize.css"
@import 'rupture'
@import url('https://fonts.googleapis.com/css?family=Saira+Semi+Condensed:300,400,500,600,700')
body
  color #fff
  font-family sans-serif
  background-image: linear-gradient(-225deg, #15579e 0%, #091e33 100%);
  min-height 100vh
  display flex
  flex-direction column
  font-family: 'Saira Semi Condensed', sans-serif

.page-wrap
  width 100%
  flex 1 
  display flex
  flex-direction column
  .page-table
    flex 1
    display flex
    align-items center
    justify-content center
  #page-menu
    font-size 1.4em
    background-color #032340
    border-bottom 1px solid #06427b
    position relative
    height 11px
    #timer
      text-align center
      width 130px
      position absolute
      left 50%
      top 10px
      transform translateX(-50%)
      z-index 2
      &-shape-l
        fill #032340
        height 50px
        width 122px
        transform rotate(180deg)
        position absolute
        top -10px
        left calc(50% - 100px)
        z-index 1
      &-shape-r
        fill #032340
        left calc(50% - 122px/2 + 35px)
        transform scaleX(1) scaleY(-1) 
        position absolute
        top 0px
        height 40px
        width 122px
        z-index 1

    #restart
      display none

#buttons-wrap
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  width 500px
  height 500px
  padding .5em
  .number
    width calc(500px / 10)
    height calc(500px / 10)
    text-align center
    display inline-block
    box-sizing border-box
    padding 0
    cursor pointer
    background-color #1497D0
    color #fff
    border 1px solid #16497D

#instructions
  text-align center
  h3
    font-weight 300
    letter-spacing .03em
  p
    margin-bottom 50px
  button
    border none
    color #fff
    font-weight 500
    padding 10px 50px
    cursor pointer
    background-image: linear-gradient(180deg, #15579e 0%, #113050 100%);
    border-radius 50px
    box-shadow 0 4px 5px -2px rgba(0,0,0,0.5)
    transition .2s
    &:hover
      box-shadow none
      box-shadow 0 2px 5px -2px rgba(0,0,0,0.5)
    

.page-footer
  background-image: linear-gradient(90deg, #032340 0%, #06427B 48%, #032340 100%);
  border-top 1px solid #06427b
  padding 10px
  text-align center
.correct
  background-color #16497D !important
  color #fff


